<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sevenpay.bms.merchant.merchantReported.mapper.KftIncomeMapper">
	
	<select id="selKftProvinceList"  resultType="com.sevenpay.bms.merchant.merchantReported.bean.KFTArea">
    	SELECT DISTINCT 
			c.province_name
		FROM 
			tb_kftpay_areainfo c
    </select>
    
    <select id="selKftCityList"  parameterType="com.sevenpay.bms.merchant.merchantReported.bean.KFTArea" resultType="com.sevenpay.bms.merchant.merchantReported.bean.KFTArea">
    	SELECT DISTINCT
			c.city_name
		FROM 
			tb_kftpay_areainfo c
		<where>
			<if test="provinceName != null and provinceName != '' ">
			and c.province_name = #{provinceName,jdbcType=VARCHAR}
			</if>
		</where>
    </select>
    
    <select id="selKftAreaList" parameterType="com.sevenpay.bms.merchant.merchantReported.bean.KFTArea"  resultType="com.sevenpay.bms.merchant.merchantReported.bean.KFTArea">
    	SELECT 
			c.area_id,
			c.area_name
		FROM 
			tb_kftpay_areainfo c
		<where>
			<if test="provinceName != null and provinceName != '' ">
			and c.province_name = #{provinceName,jdbcType=VARCHAR}
			</if>
			<if test="cityName != null and cityName != '' ">
			and c.city_name = #{cityName,jdbcType=VARCHAR}
			</if>
		</where>
    </select>
    
    
    <select id="selKftIndustryList"  resultType="com.sevenpay.bms.merchant.merchantReported.bean.KFTMccBean">
    	SELECT DISTINCT 
			c.level_one
		FROM 
			td_kft_mcc_info c
    </select>
    
    <select id="selKftIndustryTwoList"  parameterType="com.sevenpay.bms.merchant.merchantReported.bean.KFTMccBean" resultType="com.sevenpay.bms.merchant.merchantReported.bean.KFTMccBean">
    	SELECT  DISTINCT
			c.level_two
		FROM 
			td_kft_mcc_info c
		<where>
			<if test="levelOne != null and levelOne != '' ">
			and c.level_one=#{levelOne,jdbcType=VARCHAR}
			</if>
		</where>
    </select>
    
    <select id="selKftIndustryThreeList"  parameterType="com.sevenpay.bms.merchant.merchantReported.bean.KFTMccBean" resultType="com.sevenpay.bms.merchant.merchantReported.bean.KFTMccBean">
    	SELECT
			c.level_three,
			c.level_code
		FROM 
			td_kft_mcc_info c
		<where>
			<if test="levelOne != null and levelOne != '' ">
			and c.level_one=#{levelOne,jdbcType=VARCHAR}
			</if>
			<if test="levelTwo != null and levelTwo != '' ">
			and c.level_two=#{levelTwo,jdbcType=VARCHAR}
			</if>
		</where>
    </select>
</mapper>